      }
    ],
    "outputs_json": [
      {
        "name": "textResult",
        "label": "Texto Convertido",
        "unit": null,
        "rounding": null,
        "description": "La representación escrita final del número, formateada según el modo, la moneda y el caso gramatical seleccionados."
      },
      {
        "name": "calculatedTotal",
        "label": "Total Numérico (Modo IVA)",
        "unit": null,
